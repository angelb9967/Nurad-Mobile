<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    android:elevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/roomImage"
            android:layout_width="134dp"
            android:layout_height="138dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/rounded_corners"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/roomTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp"
            android:layout_toEndOf="@id/roomImage"
            android:text="Add On Title"
            android:textColor="#875E2C"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/addOnSubheading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/roomTitle"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@id/roomImage"
            android:text="Sub heading"
            android:textColor="#3E3C3C"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/roomDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/addOnSubheading"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@id/roomImage"
            android:text="Add On Description"
            android:textColor="#3E3C3C"
            android:textSize="10sp" />

        <LinearLayout
            android:id="@+id/priceAndButtonLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/roomDescription"
            android:layout_marginTop="8dp"
            android:layout_alignParentEnd="true"
            android:orientation="vertical"
            android:gravity="end">

            <TextView
                android:id="@+id/itemPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:gravity="end"
                android:text="Price"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/eachStay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Each / Stay"
                android:textColor="#3E3C3C"
                android:textSize="8sp"
                android:gravity="end"
                android:layout_gravity="end" />

            <TextView
                android:id="@+id/excludingTaxes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Excluding Taxes &amp; Fees"
                android:textColor="#3E3C3C"
                android:textSize="8sp"
                android:gravity="end"
                android:layout_gravity="end" />

            <Button
                android:id="@+id/AddButton"
                android:layout_width="78dp"
                android:layout_height="37dp"
                android:layout_marginTop="8dp"
                android:backgroundTint="#882065"
                android:padding="2dp"
                android:text="ADD"
                android:textColor="#FFFFFF"
                android:textSize="10sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_gravity="end" />
        </LinearLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>