<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Custom Progress Bar -->
    <include
        android:id="@+id/progressBarSteps"
        layout="@layout/progress_bar_steps" />

    <!-- Room Details Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/roomTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Room and Description"
                android:paddingBottom="8dp"
                android:text="Room Details"
                android:textColor="#875E2C"
                android:textSize="18sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/roomDetailsTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Search for a Room First"
                android:textColor="#545454"
                android:textSize="12sp"
                android:textStyle="normal" />

            <!-- New TextViews for room details -->
            <TextView
                android:id="@+id/roomNameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Room Name"
                android:textColor="#545454"
                android:textSize="12sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/roomTypeTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Room Type"
                android:textColor="#545454"
                android:textSize="12sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/roomPriceTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Price"
                android:textColor="#545454"
                android:textSize="12sp"
                android:textStyle="normal" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Guest Selection Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="5dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/user" />

            <Button
                android:id="@+id/guestOptionsButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:backgroundTint="#882065"
                android:text="Guests" />

            <TextView
                android:id="@+id/guestsTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Adults: 1, Children: 0"
                android:textSize="14sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Check-in Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/baseline_calendar_month_24" />

            <Button
                android:id="@+id/checkInButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:backgroundTint="#882065"
                android:text="Check-in Date" />

            <TextView
                android:id="@+id/checkInDateTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Not set"
                android:textSize="14sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Check-out Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/baseline_calendar_month_24" />

            <Button
                android:id="@+id/checkOutButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:backgroundTint="#882065"
                android:text="Check-out Date" />

            <TextView
                android:id="@+id/checkOutDateTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Not set"
                android:textSize="14sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Voucher Application Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:gravity="center_vertical">

            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/applyVoucherCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="#882065"
                android:text="Apply Voucher" />

            <EditText
                android:id="@+id/voucherEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:hint="Enter Voucher Code"
                android:visibility="gone" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Unsaved Changes Note -->
    <TextView
        android:id="@+id/unsavedChangesNote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Note: Changes will not be saved if you leave this page."
        android:textColor="#9E0909"
        android:textSize="12sp"
        android:textAlignment="center" />

    <!-- Navigation Button -->
    <Button
        android:id="@+id/nextStepButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#882065"
        android:text="Next Step" />
</LinearLayout>