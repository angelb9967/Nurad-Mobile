<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="4dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:clickable="true"
        android:background="?android:attr/selectableItemBackground">


        <ImageView
            android:id="@+id/nuradManilaLogo"
            android:layout_width="170dp"
            android:layout_height="54dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:contentDescription="Nurad Manila Logo"
            android:src="@drawable/logo_text_purple" />


        <!-- TextViews -->
        <TextView
            android:id="@+id/textView121"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="30dp"
            android:text="Address: GXJJ+89C, Coral Way, Pasay, Metro Manila"
            android:textAlignment="textStart"
            android:textSize="12sp"
            android:textStyle="normal" />


        <TextView
            android:id="@+id/textView2232"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="30dp"
            android:text="Contact No: 09682575172"
            android:textAlignment="textStart"
            android:textSize="12sp"
            android:textStyle="normal" />


        <TextView
            android:id="@+id/textView324"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="30dp"
            android:text="Email: nurad.manila@gmail.com"
            android:textAlignment="textStart"
            android:textSize="12sp"
            android:textStyle="normal" />


        <TextView
            android:id="@+id/endNoteInvoice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="30dp"
            android:text="Thank you for staying with us. Till next time!"
            android:textAlignment="textStart"
            android:textSize="12sp"
            android:textStyle="normal" />

        <View
            android:layout_width="400dp"
            android:layout_height="3dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="30dp"
            android:background="#882065" />

        <TextView
            android:id="@+id/cust_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="30dp"
            android:text="Customer Information"
            android:textAlignment="textStart"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/cust_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="30dp"
            android:text="Name"
            android:textAlignment="textStart"
            android:textSize="12sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/cust_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="30dp"
            android:text="Contact"
            android:textAlignment="textStart"
            android:textSize="12sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/cust_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="30dp"
            android:text="Email"
            android:textAlignment="textStart"
            android:textSize="12sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/cust_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="30dp"
            android:text="Address"
            android:textAlignment="textStart"
            android:textSize="12sp"
            android:textStyle="normal" />


        <View
            android:layout_width="400dp"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="30dp"
            android:background="#882065" />


        <TextView
            android:id="@+id/booking_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="30dp"
            android:text="Booking Details"
            android:textAlignment="textStart"
            android:textSize="16sp"
            android:textStyle="bold" />


        <!-- Booking Details -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/bookID_Title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:text="Booking ID"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/bookingId_textview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:text="ID"
                android:textSize="12sp" />
        </LinearLayout>


        <!-- Booking Status -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/bookingStatusTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:text="Booking Status"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/bookingStatus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:text="Status"
                android:textSize="12sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/payDate_Title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:text="Payment and Booking Date"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/paymentDate_textview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:text="Date"
                android:textSize="12sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/checkinTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:text="Check-in Date"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/staydurationval"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:text="Check-in Date"
                android:textSize="12sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/checkoutTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:text="Check-out Date"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/staydurationoutval"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:text="Check-out Date"
                android:textSize="12sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/paymentMethodTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:text="Payment Method"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/paymentMethod"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:text="Payment Method"
                android:textSize="12sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/roomNameNumber"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:text="Room Name and Number"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/roomNameNumberVals"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:text="Price"
                android:textSize="12sp" />
        </LinearLayout>


        <!-- Qty of Adult -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/quantityAdult"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:text="Qty of Adult"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/quantityAdultVal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:text="Price"
                android:textSize="12sp" />
        </LinearLayout>


        <!-- Qty of Child -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/quantityChild"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:text="Qty of Child"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/quantityChildVal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:text="Price"
                android:textSize="12sp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/addOnsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/addOns"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="8dp"
                android:text="Add-Ons"
                android:textSize="12sp"
                android:visibility="visible" />


            <TextView
                android:id="@+id/addOnsVal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="5dp"
                android:text="Price"
                android:textSize="12sp"
                android:visibility="visible" />


        </LinearLayout>


        <!-- Add-Ons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/Note"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:text="Note"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/notess"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:text="Message"
                android:textSize="12sp" />
        </LinearLayout>


        <View
            android:layout_width="400dp"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="30dp"
            android:background="#882065" />


        <!-- Subtotal -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/subtotal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:text="Subtotal"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/subtotalVal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:text="Price"
                android:textSize="12sp" />
        </LinearLayout>


        <!-- Tax/VAT -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/taxVAT"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:text="Tax/VAT (12%)"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/taxVATVal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:text="Price"
                android:textSize="12sp" />
        </LinearLayout>


        <!-- Discount (Voucher) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/discountVoucher"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:text="Discount (Code)"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/discountVoucherVal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:text="Price"
                android:textSize="12sp" />
        </LinearLayout>


        <!-- Total -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/total"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:text="Total"
                android:textColor="#882065"
                android:textSize="14sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/totalValText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:text="Price"
                android:textColor="#882065"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>


    </LinearLayout>


</androidx.cardview.widget.CardView>
