<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="16dp"
            android:paddingBottom="16dp">

            <!-- Nurad Manila Logo -->
            <ImageView
                android:id="@+id/nuradManilaLogo"
                android:layout_width="170dp"
                android:layout_height="54dp"
                android:contentDescription="Nurad Manila Logo"
                android:paddingEnd="8dp"
                android:src="@drawable/logo_text_purple" />

            <!-- Book Now Button -->
            <Button
                android:id="@+id/bookNowButton"
                android:layout_width="106dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginStart="80dp"
                android:backgroundTint="#882065"
                android:text="BOOK NOW"
                android:textColor="#FFFFFF"
                android:textSize="11sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Hotel Image -->
        <ImageView
            android:id="@+id/hotelImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/hotel_image" />

        <!-- About NURAD Manila -->

        <!-- Our Vision -->

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/aboutUsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="560dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp" />

        <!-- Board of Directors -->
        <TextView
            android:id="@+id/boardTitle"
            android:layout_width="379dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Board of Directors"
            android:textAlignment="center"
            android:textColor="#875E2C"
            android:textSize="24sp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/boardRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="659dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp" />

        <!-- CardView -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="#292727"
            android:foregroundTint="#292727"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/nuradManilaLogoText"
                    android:layout_width="170dp"
                    android:layout_marginTop="13dp"
                    android:layout_height="100dp"
                    android:contentDescription="Nurad Manila Logo"
                    android:paddingEnd="8dp"
                    android:src="@drawable/logo_text_white" />

                <View
                    android:layout_width="350dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="#FFFFFF" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="3dp"
                        android:src="@drawable/forbes_image" />

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginBottom="6dp"
                        android:src="@drawable/dpo_image" />

                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>