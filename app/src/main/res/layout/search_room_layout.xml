<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    android:elevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/roomImage"
            android:layout_width="134dp"
            android:layout_height="138dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/rounded_corners"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/roomTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp"
            android:layout_toEndOf="@id/roomImage"
            android:text="Room Title"
            android:textColor="#875E2C"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/roomDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/roomTitle"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@id/roomImage"
            android:text="Description"
            android:textColor="#545454"
            android:textSize="9dp" />

        <TextView
            android:id="@+id/depositRequired"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bookNowButton"
            android:layout_marginStart="3dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@id/roomImage"
            android:drawableStart="@drawable/baseline_credit_card_24"
            android:paddingStart="0dp"
            android:text="Deposit Required"
            android:textSize="9sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bookNowButton"
            android:layout_width="70dp"
            android:layout_height="36dp"
            android:layout_below="@id/roomDescription"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@id/roomImage"
            android:backgroundTint="#882065"
            android:padding="2dp"
            android:text="BOOK NOW"
            android:textColor="#FFFFFF"
            android:textSize="10dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/roomPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/depositRequired"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="2dp"
            android:text="Price"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/priceDetails"
            android:layout_width="76dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/roomPrice"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="2dp"
            android:text="Per Night\nExcluding Taxes &amp; Fees"
            android:textAlignment="textEnd"
            android:textColor="#545454"
            android:textSize="7dp" />

        <!-- Invisible views for roomName and roomType -->
        <TextView
            android:id="@+id/roomName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="Room Name" />

        <TextView
            android:id="@+id/roomType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="Room Type" />

        <TextView
            android:id="@+id/recommendedTag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/roomTitle"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@id/roomImage"
            android:text="Recommended"
            android:textColor="#FF0000"
            android:textSize="12sp"
            android:visibility="invisible" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>